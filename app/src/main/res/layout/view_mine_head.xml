<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="238dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:background="@color/color_333" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp90"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@mipmap/icon_default_user_head"
        app:civ_border_color="#fff"
        app:civ_border_width="1dp" />


    <ImageButton
        android:id="@+id/imageButton0"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp48"
        android:layout_toStartOf="@+id/imageButton1"
        android:background="@null"
        android:src="@mipmap/icon_mine_more" />

    <ImageButton
        android:id="@+id/imageButton1"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp48"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:src="@mipmap/icon_mine_setting" />

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/dp100"
        android:layout_height="37dp"
        android:layout_below="@id/circleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_color5fe4b1_radius4"
        android:text="@string/text_mine_register_login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp16" />

    <include
        android:id="@+id/line"
        layout="@layout/line_color_eee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/button" />




</RelativeLayout>


