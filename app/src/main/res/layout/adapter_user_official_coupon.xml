<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginStart="@dimen/dp15"
    android:layout_marginEnd="@dimen/dp15"
    >
    <TextView
        android:id="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:includeFontPadding="false"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@id/textViewValue"
        android:text="￥"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp13"
        />
    <TextView
        android:id="@+id/textViewValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_toEndOf="@id/textViewUnit"
        android:layout_marginTop="-5dp"
        android:layout_alignTop="@+id/textViewTime"
        android:text="0"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/sp30"
        />

    <TextView
        android:id="@+id/textViewUseCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="5dp"
        android:text="满100使用"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewValue"
        android:layout_alignStart="@id/textViewUnit"
        />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewType"
        android:layout_above="@id/textViewDesc"
        android:drawableStart="@mipmap/icon_sign_dab867"
        android:drawablePadding="4dp"
        android:includeFontPadding="false"
        android:text="有效期"
        android:textColor="@color/color_999"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/sp11"
        />

    <TextView
        android:id="@+id/textViewOfficial"
        android:layout_width="33dp"
        android:layout_height="13dp"
        android:layout_marginStart="138dp"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:gravity="center"
        android:background="@drawable/bg_colordab867_radius2"
        android:text="@string/text_lx_coupon"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textViewOfficial"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="@string/text_can_user_for_all_goods"
        android:textColor="@color/color_333"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_below="@id/textViewDesc"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"
        android:text="奖励"
        android:textColor="@color/color_999"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/textViewUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:text="@string/text_to_use"
        android:layout_marginEnd="14dp"
        android:textColor="@color/color_dab867"
        android:textStyle="bold"
        android:textSize="12sp"
        />
</RelativeLayout>