<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutAddAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >
    <View
        android:id="@+id/viewPadding"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_f5f7f9"
        />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_below="@+id/viewPadding"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/text_add_new_address"
        android:paddingStart="@dimen/dp15"
        android:paddingEnd="0dp"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/color_333"
        />

    <TextView
        android:layout_below="@+id/viewPadding"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="+"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp15"
        android:paddingStart="0dp"
        android:includeFontPadding="false"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textColor="@color/color_6ed7af"
        />
    <View
        android:layout_below="@+id/textViewAddress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_f5f7f9"
        />
</RelativeLayout>