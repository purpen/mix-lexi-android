<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/includeLikeGoods"
            layout="@layout/adapter_goods_like" />

        <include
            android:id="@+id/includeLikeWindow"
            layout="@layout/adapter_item_show_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/includeLikeGoods" />

        <include
            layout="@layout/empty_user_center"
            />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
