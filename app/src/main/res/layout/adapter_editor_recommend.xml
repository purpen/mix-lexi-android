<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="135dp" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="售罄"
        android:background="@drawable/corner_bg_eee"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5"
        android:paddingStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10"
        android:textSize="@dimen/sp12"
        android:textColor="@android:color/white"
        />


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/textViewExpress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp12"
        android:text="@string/app_name"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/textViewExpress"
        android:layout_alignTop="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_color5fe4b1_radius4"
        android:padding="@dimen/dp1"
        android:textSize="@dimen/sp10"
        android:layout_marginEnd="@dimen/dp5"
        android:textColor="@android:color/white"
        android:text="包邮"
        />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_below="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp12"
        android:textStyle="bold"
        android:drawablePadding="@dimen/dp2"
        android:drawableStart="@mipmap/icon_price_unit"
        />
</RelativeLayout>