<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp135"
        android:layout_height="@dimen/dp135"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imageViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:src="@mipmap/icon_sell_out"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageViewExpress"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp12" />

    <ImageView
        android:id="@+id/imageViewExpress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewTitle"
        android:layout_marginEnd="@dimen/dp5"
        android:src="@mipmap/icon_free_express"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginTop="6dp"
        android:drawableStart="@mipmap/icon_price_unit"
        android:drawablePadding="@dimen/dp2"
        android:includeFontPadding="false"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp12"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewPrice"
        android:layout_toEndOf="@+id/textViewPrice">

        <TextView
            android:id="@+id/textViewOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp5"
            android:includeFontPadding="false"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp11"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp5"
            android:includeFontPadding="false"
            android:text="喜欢 +392"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp11"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>