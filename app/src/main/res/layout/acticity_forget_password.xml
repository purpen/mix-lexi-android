<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.thn.lexi.view.CustomHeadView
        android:id="@+id/customHeadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp50"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp50"
        android:paddingEnd="@dimen/dp30"
        android:paddingStart="@dimen/dp30">

        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:background="@drawable/border_radius2_ddd"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/phone_num"
                android:inputType="phone"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingStart="@dimen/dp15"
                android:text="13366669976"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_b2b2b2"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_below="@+id/linearLayout0"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/border_radius2_ddd"
            android:paddingStart="@dimen/dp5">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/text_check_code"
                android:maxLength="30"
                android:text="12345"
                android:maxLines="1"
                android:paddingStart="@dimen/dp15"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_b2b2b2"
                android:textSize="@dimen/sp14" />

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:layout_toStartOf="@+id/textViewGetCode"
                android:background="@color/color_999" />

            <TextView
                android:id="@+id/textViewGetCode"
                android:layout_width="@dimen/dp100"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp15"
                android:paddingStart="@dimen/dp15"
                android:text="@string/text_get_check_code"
                android:textSize="@dimen/sp14" />
        </RelativeLayout>


        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/relativeLayout1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/border_radius2_ddd"
            android:gravity="left|center_vertical"
            android:hint="@string/tex_hint_new_password"
            android:inputType="textPassword"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingStart="@dimen/dp15"
            android:textColor="@color/color_333"
            android:textColorHint="@color/color_b2b2b2"
            android:textSize="@dimen/sp14" />


        <Button
            android:id="@+id/button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_below="@+id/editText1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp50"
            android:background="@drawable/bg_color6ed7af_radius4"
            android:text="@string/text_complete"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />
    </RelativeLayout>

</LinearLayout>