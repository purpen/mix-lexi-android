<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="96dp"
        android:layout_height="96dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_eee"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/bg_colorff6666_round_right"
            android:paddingLeft="@dimen/dp5"
            android:paddingTop="@dimen/dp2"
            android:paddingRight="@dimen/dp5"
            android:paddingBottom="@dimen/dp2"
            android:text="@string/text_voucher_amount"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp10" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="啊实打实的离开"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp11" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/color_ff6666"
            android:textSize="@dimen/sp10" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp1"
            android:text="1000"
            android:textColor="@color/color_ff6666" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_price_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥1000"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp10" />

</LinearLayout>