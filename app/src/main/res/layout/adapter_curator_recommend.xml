<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp10"
        android:paddingEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"
        >

        <ImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="@dimen/dp28"
            android:layout_height="@dimen/dp28"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_toEndOf="@+id/imageViewAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp12"
            />
        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/dp15"
            android:paddingEnd="@dimen/dp15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp28"
            android:src="@mipmap/icon_delete"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:text="我是定制的的商品我是定制"
        android:textSize="@dimen/sp13"
        android:textColor="@color/color_333"
        android:background="@drawable/bg_recommend_desc"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp20"
        android:paddingEnd="@dimen/dp15"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp20">

        <ImageView
            android:id="@+id/imageViewGoods"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_marginEnd="@dimen/dp10"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/imageViewFreeExpress"
            android:layout_toEndOf="@+id/imageViewGoods"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp5"
            android:src="@mipmap/icon_free_express"
            />

        <TextView
            android:id="@+id/textView0"
            android:layout_toEndOf="@+id/imageViewFreeExpress"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp13"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageViewFreeExpress"
            android:layout_below="@id/textView0"
            android:layout_marginTop="@dimen/dp5"
            android:drawablePadding="@dimen/dp2"
            android:layout_marginEnd="@dimen/dp10"
            android:text="￥1"
            android:textColor="@color/color_333"
            android:textStyle="bold"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView1"
            android:layout_alignBottom="@id/textView1"
            android:drawablePadding="@dimen/dp2"
            android:layout_marginEnd="@dimen/dp10"
            android:text="￥1"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textView1"
            android:layout_marginBottom="@dimen/dp1"
            android:layout_toEndOf="@id/textView2"
            android:gravity="center_vertical"
            android:text="喜欢 +298"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginEnd="@dimen/dp15"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp15"
            android:paddingEnd="@dimen/dp13"
            android:drawablePadding="@dimen/dp5"
            android:drawableStart="@mipmap/icon_click_favorite_normal"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="@string/text_favorite"
            android:textColor="@color/color_959fa7"
            android:textSize="@dimen/sp13" />

        <TextView
            android:id="@+id/textView5"
            android:layout_toEndOf="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp5"
            android:drawableStart="@mipmap/icon_click_share"
            android:paddingStart="@dimen/dp15"
            android:paddingEnd="@dimen/dp15"
            android:text="@string/text_share"
            android:textColor="@color/color_959fa7"
            android:textSize="@dimen/sp13" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <include layout="@layout/line_color_eee"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp15"
        android:background="@color/color_f5f7f9"
        />
</LinearLayout>