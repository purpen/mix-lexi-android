<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="@dimen/dp300"
        android:layout_height="174dp"
        android:background="@drawable/bg_colorwhite_radiu4">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            android:text="选择提现方式"
            android:textSize="@dimen/sp18"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp20"/>
        <ImageView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:src="@mipmap/icon_close_bottom_dialog"
            android:padding="@dimen/dp5"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginTop="@dimen/dp30"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@mipmap/icon_reward_wx"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp13"
                    android:text="提现到微信"
                    android:textColor="@color/color_333"
                    android:layout_marginTop="@dimen/dp15"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="@dimen/dp45"
                android:background="@color/color_e9e9e9"/>
            <LinearLayout
                android:id="@+id/ll_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:background="@mipmap/icon_reward_alipay"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp13"
                    android:text="提现到支付宝"
                    android:textColor="@color/color_333"
                    android:layout_marginTop="@dimen/dp15"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>