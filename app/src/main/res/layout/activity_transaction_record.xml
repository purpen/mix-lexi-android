<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <com.lexivip.lexi.view.CustomHeadView
        android:id="@+id/customHeadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.lexivip.lexi.view.CustomHeadView>
    <include layout="@layout/item_live_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp140"
        android:layout_margin="@dimen/dp15"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:textColor="@color/color_333"
        android:text="@string/text_transaction_record"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp7"
            android:paddingBottom="@dimen/dp7"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:drawableRight="@mipmap/icon_arrow_down"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12"
            android:background="@drawable/bg_colore9e9e9_radius4"
            android:text="@string/text_select_time"/>
        <TextView
            android:id="@+id/tv_seven_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_seven_day"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/color_6ed7af"/>
        <TextView
            android:id="@+id/tv_thirty_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_thirty_day"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/color_959fa7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_color5fe4b1_stroke"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15">
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp11"
            android:layout_marginBottom="@dimen/dp11"
            android:textColor="@color/color_6ed7af"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/text_all"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_loading_settlement"
                android:textColor="@color/color_555"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_unread_loading"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:layout_alignLeft="@+id/tv_loading"
                android:layout_marginTop="@dimen/dp2"
                android:textSize="@dimen/sp10"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_oval_ff6666"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_success"
                android:textColor="@color/color_555"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_unread_success"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:layout_alignLeft="@+id/tv_success"
                android:layout_marginTop="@dimen/dp2"
                android:textSize="@dimen/sp10"
                android:layout_marginLeft="@dimen/dp20"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_oval_ff6666"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_refund"
                android:textColor="@color/color_555"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_unread_refund"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:layout_alignLeft="@+id/tv_refund"
                android:layout_marginTop="@dimen/dp2"
                android:textSize="@dimen/sp10"
                android:layout_marginLeft="@dimen/dp20"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_oval_ff6666"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
    <com.basemodule.ui.CustomViewPager
        android:id="@+id/customViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/color_e9e9e9"></com.basemodule.ui.CustomViewPager>
</LinearLayout>