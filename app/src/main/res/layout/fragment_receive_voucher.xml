<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_eee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ib_common"
            android:layout_width="@dimen/dp66"
            android:layout_height="@dimen/dp30"
            android:background="@drawable/bg_color5fe4b1_stroke_solid"
            android:text="同享券"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_66e6b5"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp20"/>
        <Button
            android:id="@+id/ib_single"
            android:layout_width="@dimen/dp66"
            android:layout_height="@dimen/dp30"
            android:background="@drawable/corner_bg_f5f7f9"
            android:text="单享券"
            android:textSize="@dimen/sp12"
            android:textColor="@color/text_primary"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffbd9f"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCommon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>