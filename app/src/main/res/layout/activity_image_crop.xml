<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.lexivip.lexi.album.ClipSquareImageView
        android:id="@+id/csiv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ClipSquareIV_BorderColor="@android:color/transparent"
        app:ClipSquareIV_BorderWidth="0dp"
        app:ClipSquareIV_OutsideColor="#ea000000" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp16">
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="@dimen/dp75"
            android:layout_height="@dimen/dp35"
            android:background="@null"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14" />

        <Button
            android:id="@+id/buttonComfirm"
            android:layout_width="@dimen/dp75"
            android:layout_height="@dimen/dp35"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:text="@string/text_qd"
            android:textSize="@dimen/sp14"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>