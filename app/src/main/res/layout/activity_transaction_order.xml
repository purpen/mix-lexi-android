<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <com.lexivip.lexi.view.CustomHeadView
        android:id="@+id/customHeadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.lexivip.lexi.view.CustomHeadView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_margin="@dimen/dp5"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_gradient_color5fe4b14dd0bc">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/text_all_deal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12"
                android:text="@string/text_live_pen"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_all_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp24"
            android:textColor="@android:color/white"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp12"
                android:text="@string/text_day_deal"/>
            <TextView
                android:id="@+id/tv_day_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_color5fe4b1_stroke"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15">
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp11"
            android:layout_marginBottom="@dimen/dp11"
            android:textColor="@color/color_6ed7af"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/text_all"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_pending_delivery"
                android:textColor="@color/color_555"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_unread_delivery"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:layout_alignLeft="@+id/tv_delivery"
                android:layout_marginTop="@dimen/dp2"
                android:textSize="@dimen/sp10"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_oval_ff6666"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_take_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_take_delivery"
                android:textColor="@color/color_555"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_unread_take_delivery"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:layout_alignLeft="@+id/tv_take_delivery"
                android:layout_marginTop="@dimen/dp2"
                android:textSize="@dimen/sp10"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_oval_ff6666"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_already_complete"
                android:textColor="@color/color_555"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_unread_complete"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:visibility="gone"
                android:layout_alignLeft="@+id/tv_complete"
                android:layout_marginTop="@dimen/dp2"
                android:textSize="@dimen/sp10"
                android:layout_marginLeft="@dimen/dp35"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_oval_ff6666"/>
        </RelativeLayout>
    </LinearLayout>
    <com.basemodule.ui.CustomViewPager
        android:id="@+id/customViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/color_f7f9fb"></com.basemodule.ui.CustomViewPager>
</LinearLayout>