<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="@dimen/dp10"
    android:paddingLeft="@dimen/dp15"
    android:paddingRight="@dimen/dp15"
    android:paddingTop="@dimen/dp20"
    android:paddingBottom="@dimen/dp10">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dp23"
        android:layout_height="@dimen/dp23"
        android:layout_marginTop="@dimen/dp2"
        android:layout_marginRight="@dimen/dp5" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp13"
        android:textColor="@color/color_333"
        android:layout_toRightOf="@+id/iv_logo"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_order_total"
        android:textSize="@dimen/sp12"
        android:textColor="@color/color_999"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/tv_order_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/dp5"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_logo"
        android:layout_below="@+id/tv_name"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/dp10"
            android:layout_height="@dimen/dp9"
            android:background="@mipmap/icon_sign_shop"
            />
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:layout_marginLeft="@dimen/dp5"
            android:textColor="@color/color_949ea6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:textColor="@color/color_b2b2b2"
            android:text="@string/order_status"
            android:layout_marginLeft="@dimen/dp5"/>
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:textColor="@color/color_6ed7af"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_total"></android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp11"
        android:text="@string/text_order_code"/>
    <TextView
        android:id="@+id/tv_order_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp11"
        android:layout_toRightOf="@+id/textView1"/>
    <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp11"
        android:textColor="@color/color_b2b2b2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="@dimen/dp5" />
    <TextView
        android:id="@+id/tv_order_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff6666"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:textSize="@dimen/sp12"
        android:layout_marginTop="@dimen/dp5"
        android:text="0.00"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp12"
        android:textColor="@color/color_999"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toLeftOf="@+id/tv_order_income"
        android:layout_below="@id/textView1"
        android:text="@string/text_order_income"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e9e9e9"
        android:layout_below="@+id/tv_order_income"
        android:layout_marginTop="@dimen/dp15"/>
    <Button
        android:id="@+id/bt_logistics"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp29"
        android:background="@drawable/shape_radiu4_bgcolor_5fe4b1"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/sp12"
        android:text="@string/order_logistics"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/dp10"
        android:layout_below="@+id/image" />
</RelativeLayout>