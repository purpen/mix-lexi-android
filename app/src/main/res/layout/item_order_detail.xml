<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="@dimen/dp1">
    <ImageView
        android:id="@+id/iv_order_goods"
        android:layout_width="@dimen/dp65"
        android:layout_height="@dimen/dp65"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp10" />
    <TextView
        android:id="@+id/tv_goods_sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:layout_marginRight="@dimen/dp15"
        android:textColor="@color/color_333"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_order_goods"
        android:layout_marginTop="@dimen/dp5"/>
    <TextView
        android:id="@+id/tv_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x2"
        android:layout_toLeftOf="@+id/tv_goods_sale_price"
        android:layout_marginRight="@dimen/dp15"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp12"
        android:layout_alignTop="@+id/iv_order_goods"
        android:layout_marginTop="@dimen/dp5"/>
    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥345"
        android:textColor="@color/color_b2b2b2"
        android:textSize="@dimen/sp12"
        android:layout_below="@+id/tv_goods_sale_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp15"/>
    <TextView
        android:id="@+id/tv_order_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_order_goods"
        android:layout_toRightOf="@+id/iv_order_goods"
        android:layout_toLeftOf="@+id/tv_goods_num"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="10dp"
        android:text="sssssssssssssssssssssssssssssssssssssssssssss"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_goods_parm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黑色／M"
        android:textColor="@color/color_b2b2b2"
        android:textSize="@dimen/sp12"
        android:layout_below="@+id/tv_order_goods_name"
        android:layout_toRightOf="@+id/iv_order_goods"
        android:layout_marginTop="@dimen/dp5"/>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_order_goods">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp20"
            android:text="@string/order_freight_type"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp15">
            <ImageView
                android:layout_width="@dimen/dp17"
                android:layout_height="@dimen/dp17"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_order_logistics"/>
            <TextView
                android:id="@+id/tv_logistics_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="圆通快递"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp12"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp15"/>
        </LinearLayout>
        <Button
            android:id="@+id/bt_logistics"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp29"
            android:background="@drawable/shape_radiu4_bgcolor_5fe4b1"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp12"
            android:text="@string/order_logistics"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginRight="@dimen/dp15"/>
    </RelativeLayout>
</RelativeLayout>