<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewHeader"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_load" />


    <LinearLayout
        android:id="@+id/linearLayoutPublishWindow"
        android:layout_width="98dp"
        android:layout_height="@dimen/dp33"
        android:background="@drawable/bg_radius_oval"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp11"
        android:layout_gravity="right"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp5"
            android:text="@string/text_publish_window"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp12" />

        <ImageView
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:src="@mipmap/icon_add_white" />

    </LinearLayout>
    <include
        layout="@layout/line_color_eee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14"
        android:text="@string/app_name"
        android:layout_marginStart="@dimen/dp80"
        android:layout_marginTop="-41dp"
        />

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:src="@drawable/default_load"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="-49dp"
        android:scaleType="fitXY"
        />

</LinearLayout>