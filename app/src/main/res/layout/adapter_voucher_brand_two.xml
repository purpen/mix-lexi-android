<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_colorwhite_radiu4"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp62"
            android:layout_marginBottom="@dimen/dp25"
            android:background="@color/color_ff6666"/>
        <ImageView
            android:id="@+id/tv_logo"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大as大V"
        android:textColor="@color/color_333"
        android:layout_marginTop="@dimen/dp10"
        />
    <LinearLayout
        android:layout_width="@dimen/dp128"
        android:layout_height="43dp"
        android:background="@mipmap/icon_receive_voucher_available"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff6666"
                android:text="¥"
                android:textSize="@dimen/sp12"/>
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp20"
                android:text="10"
                android:textStyle="bold"
                android:textColor="@color/color_ff6666"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff6666"
            android:textSize="@dimen/sp10"
            android:text="满100可用"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/go_shop"
        android:layout_width="@dimen/dp128"
        android:layout_height="@dimen/sp30"
        android:orientation="vertical"
        android:background="@drawable/bg_colorff6b34_round"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp15"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/text_go_shop"
            android:drawablePadding="@dimen/dp5"
            android:includeFontPadding="false"
            android:drawableRight="@mipmap/icon_receive_voucher_right"/>
    </LinearLayout>
</LinearLayout>