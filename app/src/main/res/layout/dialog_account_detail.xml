<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp28"
    android:layout_marginRight="@dimen/dp28"
    android:layout_marginTop="@dimen/dp110"
    android:layout_marginBottom="@dimen/dp110"
    android:background="@drawable/bg_colorwhite_radiu4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@drawable/bg_colorf9f9f9_top_radiu4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_income_detail"
            android:textSize="@dimen/sp16"
            android:textColor="@color/color_333"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp10"
            android:padding="@dimen/dp5"
            android:src="@mipmap/icon_practice_close"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>