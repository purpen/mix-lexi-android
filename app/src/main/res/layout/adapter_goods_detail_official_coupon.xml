<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp75"
    android:layout_marginStart="@dimen/dp15"
    android:layout_marginEnd="@dimen/dp15"
    android:background="@android:color/white"
    >
    <ImageView
        android:id="@+id/imageViewCouponRight"
        android:layout_width="68dp"
        android:layout_height="75dp"
        android:src="@mipmap/icon_bg_coupon_goods_detail_enable"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:background="@color/color_f7f9fb"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="75dp"
        android:src="@mipmap/icon_bg_coupon_goods_detail_left"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:background="@color/color_f7f9fb"
        />
    <TextView
        android:id="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="5dp"
        android:includeFontPadding="false"
        android:layout_alignTop="@+id/textViewValue"
        android:layout_marginTop="5dp"
        android:text="¥"
        android:textColor="@color/color_ff6934"
        android:textSize="@dimen/sp13"
        />
    <TextView
        android:id="@+id/textViewValue"
        android:layout_toEndOf="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="0"
        android:textColor="@color/color_ff6934"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp30"
        />
    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="11dp"
        android:includeFontPadding="false"
        android:text="满"
        android:textColor="@color/color_6ed7af"
        android:textSize="@dimen/sp13"
        />

    <LinearLayout
        android:id="@+id/linearLayoutType"
        android:layout_below="@+id/textViewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="93dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/textViewOfficial"
            android:layout_width="33dp"
            android:layout_height="13dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:background="@drawable/bg_colordab867_radius2"
            android:text="@string/text_lx_coupon"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/textViewDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginStart="5dp"
            android:text="@string/text_can_user_for_all_goods"
            android:textColor="@color/color_333"
            android:textSize="12sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutType"
        android:layout_alignStart="@+id/textViewContent"
        android:includeFontPadding="false"
        android:text="有效期"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp11"
        />
    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="@dimen/dp65"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/text_share_get"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp14"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:lineSpacingMultiplier="1.2"
        />
</RelativeLayout>