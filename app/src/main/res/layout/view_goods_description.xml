<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingEnd="@dimen/dp0"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp20"
        android:text="@string/text_description"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp13"
        android:textStyle="bold" />

    <!--亮点：-->
    <TextView
        android:id="@+id/textViewLightSpot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:paddingBottom="@dimen/dp15"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="亮点："
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />

    <!--材质：-->
    <TextView
        android:id="@+id/textViewMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:paddingBottom="@dimen/dp15"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="材质："
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />


    <!--特点：可定制-->
    <TextView
        android:id="@+id/textViewCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/dp15"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="特点："
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14"
        android:visibility="gone"
        />

    <!--数量：-->
    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:paddingLeft="@dimen/dp15"
        android:includeFontPadding="false"
        android:paddingRight="@dimen/dp15"
        android:text="数量："
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />

    <include
        layout="@layout/line_color_eee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="@dimen/dp20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp20"
        android:includeFontPadding="false"
        android:text="@string/text_send_address"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp13"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSendAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:paddingBottom="@dimen/dp20"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="澳门"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />

    <include
        layout="@layout/line_color_eee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp20"
        android:includeFontPadding="false"
        android:text="@string/text_send_time"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp13"
        android:textStyle="bold" />

    <TextView
        android:id="@id/textViewCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:paddingBottom="@dimen/dp20"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="预计3~5天到达遵义"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />

    <include
        layout="@layout/line_color_eee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp20"
        android:includeFontPadding="false"
        android:text="@string/text_return_policy"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp13"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewReturnPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:drawableStart="@drawable/bg_oval_000"
        android:drawablePadding="6dp"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/dp20"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="退货"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />

    <Button
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp20"
        android:includeFontPadding="false"
        android:background="@drawable/border_radius4_666"
        android:text="@string/text_see_all"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp14" />

</LinearLayout>