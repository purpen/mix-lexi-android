<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/view_goods_detail_head"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp20"
        android:text="@string/text_description"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:paddingBottom="@dimen/dp20"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="进入7月以来，中国降水范围广泛，四川盆地、陕西南部一带持续强降雨。今起，南方强降雨范围将扩大至江淮等地，与此同时暴雨蓝色预警、山洪灾害气象预警、地质灾害气象风险预警也在3日同时发布。"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14"
       />

    <include
        layout="@layout/line_color_eee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp20"
        android:text="@string/text_send_address"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:paddingBottom="@dimen/dp20"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="澳门"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />

    <include
        layout="@layout/line_color_eee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp20"
        android:text="@string/text_send_time"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:paddingBottom="@dimen/dp20"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="预计3~5天到达遵义"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />

    <include
        layout="@layout/line_color_eee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="@dimen/dp20"
        android:text="@string/text_return_policy"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:paddingBottom="@dimen/dp20"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="预计到达目的地3~5天"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14" />

    <Button
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_radius4_ddd"
        android:text="@string/text_see_all"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp14"
        android:layout_marginBottom="@dimen/dp20" />


</merge>