<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:layout_marginTop="@dimen/dp1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="@string/order_code"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_order_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp15">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_type"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="@dimen/dp28"
            android:layout_height="@dimen/dp28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_colore9e9e9_radius4"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_pay_check" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_subtotal"
                android:textColor="@color/color_9099a6"
                android:textSize="@dimen/sp12"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_order_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp15"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_freight"
                android:textColor="@color/color_9099a6"
                android:textSize="@dimen/sp12"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_order_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_c2a67d"
                android:textSize="@dimen/sp12"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_first_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:visibility="gone">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_first_order_discount"
                android:textColor="@color/color_9099a6"
                android:textSize="@dimen/sp12"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_first_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9299a5"
                android:textSize="@dimen/sp15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_reach_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:visibility="gone">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_full_reduce"
                android:textColor="@color/color_9099a6"
                android:textSize="@dimen/sp12"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_reach_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9299a5"
                android:textSize="@dimen/sp15"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_coupon_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:visibility="gone">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券："
                android:textColor="@color/color_9099a6"
                android:textSize="@dimen/sp12"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_coupon_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9299a5"
                android:textSize="@dimen/sp15"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_amount"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff6666"
                android:textSize="@dimen/sp17" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@android:color/white"
        android:padding="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp1">
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp1"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:paddingTop="@dimen/dp7"
        android:paddingBottom="@dimen/dp7">

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/sp11" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•"
            android:textSize="@dimen/sp11"
            android:textColor="@color/color_b2b2b2"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:textColor="@color/color_b2b2b2"
            android:text="@string/order_status" />
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6ed7af"
            android:textSize="@dimen/sp11"
            android:layout_marginLeft="@dimen/dp5"/>
        <TextView
            android:id="@+id/tv_delivery_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12"
            />
    </LinearLayout>
</LinearLayout>