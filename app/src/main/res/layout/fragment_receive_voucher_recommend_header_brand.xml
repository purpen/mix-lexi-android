<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffbd9f"
    android:gravity="center_horizontal">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp35"
      android:drawableLeft="@mipmap/icon_receive_voucher_title_left"
      android:drawableRight="@mipmap/icon_receive_voucher_title_right"
      android:drawablePadding="@dimen/dp10"
      android:text="精选品牌券"
      android:textColor="@android:color/white"
      android:textSize="@dimen/sp20" />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerViewBrand"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/dp15"
      android:paddingRight="@dimen/dp15"></android.support.v7.widget.RecyclerView>
</LinearLayout>