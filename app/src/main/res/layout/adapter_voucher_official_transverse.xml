<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp15"
    android:paddingRight="@dimen/dp15"
    android:paddingTop="@dimen/dp10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/recyclerView1"
        android:background="@mipmap/icon_receive_voucher_official_left">
        <RelativeLayout
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_ff6b34"
                android:textSize="@dimen/sp13"
                android:layout_marginTop="@dimen/dp5"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_toRightOf="@id/textView"
                android:includeFontPadding="false"
                android:textSize="@dimen/sp30"
                android:textColor="@color/color_ff6b34"
                android:textStyle="bold"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10">
            <TextView
                android:id="@+id/tv_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff6666"
                android:text="满0元可用"
                android:textSize="@dimen/sp12" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp11"
                android:textColor="@color/color_d87c7c" />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp9"
                android:text="小玩意品类"
                android:textColor="@color/color_ed6f6f"
                android:background="@drawable/bg_colorffd1d1_radiu2"
                android:layout_marginTop="@dimen/dp2"
                android:paddingTop="@dimen/dp1"
                android:paddingRight="@dimen/dp4"
                android:paddingLeft="@dimen/dp4"
                android:paddingBottom="@dimen/dp1"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recyclerView1"
        android:layout_width="@dimen/dp70"
        android:layout_height="@dimen/dp67"
        android:layout_alignParentRight="true"
        android:background="@mipmap/icon_receive_voucher_official_right">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_share_get"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/iv_null"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_receive_voucher_null"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>