<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginStart="@dimen/dp3"
    android:layout_marginEnd="@dimen/dp3"
    android:layout_height="@dimen/dp53"
    tools:showIn="@layout/fragment_main0">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp53"
        android:background="@drawable/bg_search_box" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp25"
        android:src="@mipmap/icon_search_head"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp10" />

    <TextView
        android:layout_toEndOf="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp13"
        android:text="@string/hint_search_text"
        android:textColor="@color/color_555"
        android:textSize="@dimen/sp12" />
</RelativeLayout>