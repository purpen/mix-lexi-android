<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/head_goback"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_nav_back" />
        <TextView
            android:id="@+id/head_center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp60"
            android:layout_marginLeft="@dimen/dp60"
            android:ellipsize="end"
            android:maxLines = "1"
            android:textColor="@color/color_333"
            android:textSize="18sp" />
        <!--TODO 分享待完成-->
        <ImageView
            android:id="@+id/imageViewShare"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp15"
            android:visibility="gone"
            android:src="@mipmap/icon_click_share" />
    </RelativeLayout>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:fitsSystemWindows="true">
<!--app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp1"
                    android:layout_marginBottom="@dimen/dp20"
                    android:background="@android:color/white"
                    android:elevation="@dimen/dp10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_logo"
                            android:layout_width="@dimen/dp70"
                            android:layout_height="@dimen/dp70"
                            android:layout_margin="@dimen/dp15" />

                        <LinearLayout
                            android:id="@+id/ll_goods"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp35"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_goods_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="0"
                                android:textColor="@color/color_6ed7af"
                                android:textSize="@dimen/sp20" />

                            <TextView
                                android:id="@+id/tv_goods"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_goods"
                                android:textColor="@color/color_6ed7af"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_article"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp40"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_article_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="0"
                                android:textColor="@color/color_949ea6"
                                android:textSize="@dimen/sp20" />

                            <TextView
                                android:id="@+id/tv_article"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_article"
                                android:textColor="@color/color_949ea6"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/dp15">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp15"
                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_weight="1"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/sp17" />

                        <ImageView
                            android:layout_width="@dimen/dp16"
                            android:layout_height="@dimen/dp16"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_marginRight="@dimen/dp5"
                            android:background="@drawable/bg_dot_color5fe4b1"
                            android:paddingLeft="@dimen/dp2"
                            android:paddingTop="@dimen/dp3"
                            android:paddingRight="@dimen/dp2"
                            android:paddingBottom="@dimen/dp3"
                            android:src="@mipmap/icon_focus_pavilion" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_brand_house" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp15"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp15">

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_brand_house_location"
                            android:textColor="@color/color_949ea6"
                            android:textSize="@dimen/sp13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp15"
                            android:layout_marginRight="@dimen/dp5"
                            android:text="@string/text_fans"
                            android:textColor="@color/color_949ea6"
                            android:textSize="@dimen/sp13" />

                        <TextView
                            android:id="@+id/tv_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/sp13" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp15"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp12" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sp20">

                        <LinearLayout
                            android:id="@+id/ll_follow"
                            android:layout_width="@dimen/dp88"
                            android:layout_height="@dimen/dp30"
                            android:layout_marginLeft="@dimen/dp15"
                            android:background="@drawable/switch_noselect"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_focus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/icon_focus_pavilion"
                                android:drawablePadding="@dimen/dp5"
                                android:text="@string/text_focus"
                                android:textColor="@android:color/white" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_design"
                            android:layout_width="@dimen/dp88"
                            android:layout_height="@dimen/dp30"
                            android:layout_marginLeft="@dimen/dp15"
                            android:background="@drawable/bg_radius_round_f5f7f9"
                            android:gravity="center"
                            android:text="@string/text_design"
                            android:textColor="@color/color_333" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_discount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp65"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:background="@drawable/bg_color33d4af86_radius4"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp15"
                            android:background="@mipmap/icon_brand_house_voucher" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="1"
                            android:text="@string/text_voucher"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/tv_receive"
                            android:layout_width="@dimen/dp45"
                            android:layout_height="@dimen/dp25"
                            android:background="@drawable/border_round_dadada"
                            android:gravity="center"
                            android:text="@string/text_receive"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_brand_house__minus"
                        android:drawablePadding="@dimen/dp5"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingTop="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp7"
                        android:background="@drawable/bg_colore9e9e9_stroke_radius"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp5">

                        <RelativeLayout
                            android:id="@+id/rl_close"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="@dimen/dp53"
                                android:layout_height="@dimen/dp20"
                                android:layout_marginLeft="@dimen/dp15"
                                android:layout_marginTop="@dimen/dp15"
                                android:layout_marginRight="@dimen/dp15"
                                android:background="@mipmap/icon_brand_house_close" />

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/image"
                                android:layout_toRightOf="@+id/image"
                                android:text="@string/text_brand_close_time"
                                android:textColor="@color/color_555"
                                android:textSize="@dimen/sp12" />

                            <TextView
                                android:id="@+id/tv_close_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/text"
                                android:layout_toRightOf="@+id/text"
                                android:textColor="@color/color_555"
                                android:textSize="@dimen/sp12" />

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_alignLeft="@+id/text"
                                android:text="@string/text_recovery_time"
                                android:textColor="@color/color_f5a43c"
                                android:textSize="@dimen/sp12" />

                            <TextView
                                android:id="@+id/tv_recovery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/text1"
                                android:layout_toRightOf="@+id/text1"
                                android:textColor="@color/color_f5a43c"
                                android:textSize="@dimen/sp12" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/text1"
                                android:layout_marginTop="@dimen/dp15"
                                android:background="@color/color_e9e9e9" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp12"
                            android:layout_marginBottom="@dimen/dp12"
                            android:paddingLeft="@dimen/dp15"
                            android:paddingRight="@dimen/dp15">

                            <TextView
                                android:id="@+id/tv_notice0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:textColor="@color/color_666"
                                android:textSize="@dimen/sp13" />

                            <TextView
                                android:id="@+id/tv_look"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_notice0"
                                android:layout_alignParentRight="true"
                                android:text="@string/text_look_more"
                                android:visibility="gone"
                                android:textColor="@color/color_6ed7af" />

                            <TextView
                                android:id="@+id/tv_notice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_notice0"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="@dimen/dp5"
                                android:layout_toLeftOf="@+id/tv_look"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_666"
                                android:textSize="@dimen/sp13" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp20"
                        android:background="@android:color/white"
                        android:text="@string/text_brand_notice"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/dp11" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.basemodule.ui.CustomViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></com.basemodule.ui.CustomViewPager>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>