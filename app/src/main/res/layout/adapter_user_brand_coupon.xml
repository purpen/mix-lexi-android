<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginStart="@dimen/dp15"
    android:layout_marginEnd="@dimen/dp15"
    >
    <ImageView
        android:id="@+id/imageViewCouponLeft"
        android:layout_width="128dp"
        android:layout_height="85dp"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:src="@mipmap/icon_pavilion_coupon_left"
        android:background="@color/color_f7f9fb"
        />

    <ImageView
        android:id="@+id/imageViewCouponRight"
        android:layout_width="37dp"
        android:layout_height="85dp"
        android:src="@mipmap/icon_pavilion_coupon_right"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:background="@color/color_f7f9fb"
        />
    <TextView
        android:id="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:includeFontPadding="false"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@id/textViewValue"
        android:text="￥"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp13"
        />
    <TextView
        android:id="@+id/textViewValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_alignTop="@+id/textViewTime"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@id/textViewUnit"
        android:text="0"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/sp30"
        />
    <TextView
        android:id="@+id/textViewUseCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="满100使用"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewValue"
        android:layout_alignStart="@id/textViewUnit"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_above="@id/textViewDesc"
        android:drawableStart="@mipmap/icon_sign_dab867"
        android:drawablePadding="4dp"
        android:includeFontPadding="false"
        android:text="2018"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp11"
        />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="138dp"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:textColor="@color/color_333"
        android:textSize="12sp"
        />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/textViewDesc"
        android:layout_marginStart="138dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/textViewName"
        android:layout_toEndOf="@id/imageView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDesc"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:text="@string/text_loading"
        android:layout_marginStart="5dp"
        android:textColor="@color/color_999"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/textViewUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:text="@string/text_to_use"
        android:layout_marginEnd="14dp"
        android:textColor="@color/color_ff733b"
        android:textStyle="bold"
        android:textSize="12sp"
        />
</RelativeLayout>