<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp190"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/dp20"
        android:paddingTop="@dimen/dp15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_search_box">

        <TextView
            android:id="@+id/textViewIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp4"
            android:drawableTop="@mipmap/icon_tou_tiao"
            android:text="@string/text_tou_tiao"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp12" />

        <ImageView
            android:id="@+id/imageViewSeparate"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginTop="@dimen/dp5"
            android:layout_toEndOf="@+id/textViewIcon"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_seprate_tt" />

        <TextView
            android:id="@+id/textViewOpenInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:layout_toEndOf="@+id/imageViewSeparate"
            android:text="设计师risky秒前开了自己的设计馆"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/textViewOrderInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewOpenInfo"
            android:layout_below="@+id/textViewOpenInfo"
            android:layout_marginTop="@dimen/dp5"
            android:text="伟峰的设计馆1小时售出200单"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp12" />
    </RelativeLayout>

</LinearLayout>


        