<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutNoLifeHouse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:visibility="gone"
    >

    <ImageView
        android:id="@+id/imageViewBgNoLifeHouse"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:paddingStart="20dp"
        android:paddingTop="32dp"
        android:text="自己买省钱 卖出去赚钱"
        android:textColor="#ff32cdbd"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageViewOpenHouseGuide"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_bg_tou_tiao" />

    <ImageView
        android:id="@+id/imageViewTag"
        android:layout_width="77dp"
        android:layout_height="22dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="155dp"
        android:src="@mipmap/icon_tou_tiao_tag" />

    <RelativeLayout
        android:id="@+id/relativeLayoutGuideContent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:includeFontPadding="false"
            android:shadowRadius="3.0"
            android:text="做自己热爱的事 顺便赚取收入"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonOpenShop"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_color5fe4b1_radius4"
            android:text="@string/text_open_store_guide"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <com.lexivip.lexi.view.AutoScrollRecyclerView
            android:id="@+id/autoScrollRecyclerView"
            android:layout_alignParentEnd="true"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>

    