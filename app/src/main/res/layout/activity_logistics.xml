<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f9fb">
    <com.thn.lexi.view.CustomHeadView
        android:id="@+id/customHeadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.thn.lexi.view.CustomHeadView>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp128"
        android:background="@color/color_2d343a"
        android:layout_below="@+id/customHeadView"
        android:padding="@dimen/dp15">
        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/sp12"
            android:textColor="@android:color/white"
            android:text="@string/logistics_code"/>
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/sp12"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/textView0"/>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:textSize="@dimen/sp12"
            android:textColor="@android:color/white"
            android:text="@string/logistics_freight_type"
            android:layout_below="@+id/textView0" />
        <TextView
            android:id="@+id/tv_freight_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/textView1"
            android:layout_alignTop="@+id/textView1"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/sp12"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:textSize="@dimen/sp12"
            android:textColor="@android:color/white"
            android:text="@string/logistics_state"
            android:layout_toLeftOf="@+id/tv_state"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp67"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:background="@drawable/bg_gradient_logistics"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/customHeadView"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="34dp"
                android:gravity="center_vertical">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp1"
                    android:layout_weight="1"
                    android:background="@color/color_80fff"
                    />
                <ImageView
                    android:layout_width="@dimen/dp6"
                    android:layout_height="@dimen/dp6"
                    android:background="@drawable/bg_rount_white"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp1"
                    android:layout_weight="1"
                    android:background="@color/color_80fff"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/dp17"
                android:layout_height="@dimen/dp20"
                android:background="@mipmap/icon_logistics_order"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_submit_order"
                android:textSize="@dimen/sp12"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp9"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="34dp"
                android:gravity="center_vertical">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp1"
                    android:layout_weight="1"
                    android:background="@color/color_80fff"
                    />
                <ImageView
                    android:layout_width="@dimen/dp6"
                    android:layout_height="@dimen/dp6"
                    android:background="@drawable/bg_rount_white"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp1"
                    android:layout_weight="1"
                    android:background="@color/color_80fff"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:background="@mipmap/icon_logistics_ing"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logistics_distribution"
                android:textSize="@dimen/sp12"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp9"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="34dp"
                android:gravity="center_vertical">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp1"
                    android:layout_weight="1"
                    android:background="@color/color_80fff"
                    />
                <ImageView
                    android:id="@+id/iv_logistics_finish"
                    android:layout_width="@dimen/dp6"
                    android:layout_height="@dimen/dp6"
                    android:background="@drawable/bg_rount_white_translucent"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp1"
                    android:layout_weight="1"
                    android:background="@color/color_80fff"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:background="@mipmap/icon_logistics_nofinish"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logistics_finish"
                android:textSize="@dimen/sp12"
                android:textColor="@color/color_80fff"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp9"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:layout_marginTop="@dimen/dp85"
            android:background="@mipmap/icon_logistics_null" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="由于物流公司原因"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/color_949ea6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂未查询到礼物包裹进展"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_949ea6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运单编号"
            android:layout_marginTop="@dimen/dp60"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp12"
            />
        <TextView
            android:id="@+id/tv_logistics_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/color_333" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:maxEms="13"
            android:gravity="center"
            android:text="您可选择长按复制运单编号到物流公司官网查询"
            android:textColor="@color/color_949ea6"
            android:textSize="@dimen/sp12"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp25"></android.support.v7.widget.RecyclerView>
</RelativeLayout>