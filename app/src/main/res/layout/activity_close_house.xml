<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp53"
                android:layout_height="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp65"
                android:background="@mipmap/icon_brand_house_close" />
            <TextView
                android:id="@+id/tv_close_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_555"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:text="@string/text_brand_close_time"/>
            <TextView
                android:id="@+id/tv_recovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_f5a43c"
                android:layout_marginLeft="@dimen/dp15"
                android:text="@string/text_recovery_time"
                android:layout_marginTop="@dimen/dp5"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/color_eee"
                android:layout_marginTop="@dimen/dp15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_brand_notice"
                android:textStyle="bold"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp13"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp25"/>
            <TextView
                android:id="@+id/tv_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp13"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp70"
                android:lineSpacingExtra="@dimen/dp8"
                android:textColor="@color/color_666" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp135"
        android:background="@drawable/bg_colorfff_gradient"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp27"
            android:layout_height="@dimen/dp27"
            android:src="@mipmap/icon_close"
            android:padding="@dimen/dp3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp80"/>
    </RelativeLayout>

</RelativeLayout>