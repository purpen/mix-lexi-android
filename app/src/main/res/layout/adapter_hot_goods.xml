<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp20"
        android:paddingEnd="@dimen/dp10"
        android:paddingStart="@dimen/dp10"
        android:paddingTop="@dimen/dp20">

        <ImageView
            android:id="@+id/imageViewGoods"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:layout_marginEnd="@dimen/dp10"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/imageViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_sell_out"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginStart="@dimen/dp5"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/imageViewFreeExpress"
            android:layout_toEndOf="@+id/imageViewGoods"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp5"
            android:src="@mipmap/icon_free_express"
            />

        <TextView
            android:id="@+id/textView0"
            android:layout_toEndOf="@+id/imageViewFreeExpress"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/app_name"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp13"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageViewFreeExpress"
            android:layout_below="@id/textView0"
            android:layout_marginTop="@dimen/dp5"
            android:drawablePadding="@dimen/dp2"
            android:includeFontPadding="false"
            android:layout_marginEnd="@dimen/dp10"
            android:text="￥1"
            android:textColor="@color/color_333"
            android:textStyle="bold"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView1"
            android:layout_alignBottom="@id/textView1"
            android:drawablePadding="@dimen/dp2"
            android:layout_marginEnd="@dimen/dp10"
            android:text="￥1"
            android:includeFontPadding="false"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/textView1"
            android:layout_marginBottom="@dimen/dp1"
            android:layout_toEndOf="@id/textView2"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="喜欢 +298"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/textViewEarn"
            android:layout_below="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp1"
            android:layout_marginTop="@dimen/dp15"
            android:includeFontPadding="false"
            android:layout_alignStart="@+id/textView1"
            android:gravity="center_vertical"
            android:text="赚 ￥10"
            android:textColor="@color/color_ff6666"
            android:textSize="@dimen/sp12"
            />

    </RelativeLayout>
    <include layout="@layout/line_color_eee"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_height="@dimen/dp1"
        android:layout_width="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginEnd="@dimen/dp15"
        >

        <Button
            android:id="@+id/textView4"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_radius_round_ff6666"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp25"
            android:layout_marginStart="@dimen/dp15"
            android:layout_centerVertical="true"
            android:text="@string/text_sell"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp12" />

        <Button
            android:id="@+id/textView5"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_toStartOf="@+id/textView4"
            android:background="@drawable/bg_radius_round_2d343a"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp25"
            android:layout_centerVertical="true"
            android:text="@string/text_putaway"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp12" />

    </RelativeLayout>

    <include layout="@layout/line_color_eee"/>
</LinearLayout>